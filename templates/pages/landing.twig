{% extends 'base.twig' %}

{% block navigation %}
    {% include 'components/navigation.twig' with {'user': user, 'app_name': app_name} %}
{% endblock %}

{% block content %}
{# Hero Section - Dark Gradient #}
<div class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32 relative z-10">
        <div class="text-center">
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
                Manage Your Tickets Effortlessly
            </h2>
            <p class="text-xl sm:text-2xl mb-8 text-gray-300 max-w-3xl mx-auto">
                Streamline your workflow with our powerful ticket management system. Track, organize, and resolve issues faster than ever.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/signup" class="px-8 py-4 bg-white text-gray-900 rounded-lg font-semibold text-lg hover:bg-gray-100 transition shadow-lg">
                    Get Started
                </a>
                <a href="/login" class="px-8 py-4 bg-transparent text-white rounded-lg font-semibold text-lg hover:bg-white/10 transition border-2 border-white">
                    Login
                </a>
            </div>
        </div>
    </div>

    {# Decorative Circles #}
    <div class="absolute top-10 right-10 w-32 h-32 bg-blue-500 rounded-full opacity-20 blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-48 h-48 bg-blue-400 rounded-full opacity-20 blur-3xl"></div>

    {# Wave SVG - Dark background #}
    <svg class="absolute bottom-0 left-0 w-full h-24" viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 0L60 8C120 16 240 32 360 42.7C480 53 600 59 720 58.7C840 59 960 53 1080 48C1200 43 1320 37 1380 34.7L1440 32V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="#1f2937"/>
    </svg>
</div>

{# Features Section - Dark Theme #}
<div class="bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <h3 class="text-3xl font-bold text-center text-white mb-12">Why Choose TicketFlow?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% set features = [
                {title: 'Easy to Use', desc: 'Intuitive interface designed for efficiency'},
                {title: 'Real-time Updates', desc: 'Stay informed with instant notifications'},
                {title: 'Secure & Reliable', desc: 'Your data is protected with enterprise-grade security'}
            ] %}
            
            {% for feature in features %}
            <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition hover:border-gray-600">
                <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <h4 class="text-xl font-semibold text-white mb-2">{{ feature.title }}</h4>
                <p class="text-gray-400">{{ feature.desc }}</p>
            </div>
            {% endfor %}
        </div>
        
        </div>
    </div>
</div>
{% endblock %}