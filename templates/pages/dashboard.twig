{% extends 'base.twig' %}

{% block navigation %}
    {% include 'components/navigation.twig' with {'user': user, 'app_name': app_name} %}
{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        {# Compact Header #}
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-white mb-1">Dashboard</h2>
            <p class="text-gray-400 text-sm">Welcome back, {{ user.email }}!</p>
        </div>

        {# Compact Stats Cards #}
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
            <div class="bg-gray-800 rounded-lg shadow-sm border border-gray-700 p-4 text-center hover:border-gray-600 transition">
                <div class="w-10 h-10 bg-green-500/20 rounded-full mx-auto mb-3 flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-1" id="openTicketsCount">0</h3>
                <p class="text-gray-400 text-sm">Open</p>
            </div>

            <div class="bg-gray-800 rounded-lg shadow-sm border border-gray-700 p-4 text-center hover:border-gray-600 transition">
                <div class="w-10 h-10 bg-yellow-500/20 rounded-full mx-auto mb-3 flex items-center justify-center">
                    <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-1" id="inProgressTicketsCount">0</h3>
                <p class="text-gray-400 text-sm">In Progress</p>
            </div>

            <div class="bg-gray-800 rounded-lg shadow-sm border border-gray-700 p-4 text-center hover:border-gray-600 transition">
                <div class="w-10 h-10 bg-blue-500/20 rounded-full mx-auto mb-3 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-1" id="closedTicketsCount">0</h3>
                <p class="text-gray-400 text-sm">Closed</p>
            </div>
        </div>

        {# Recent Tickets Section - More Compact #}
        <div class="bg-gray-800 rounded-lg shadow-sm border border-gray-700">
            <div class="flex justify-between items-center p-4 border-b border-gray-700">
                <h3 class="text-lg font-semibold text-white">Recent Tickets</h3>
                <a href="/tickets" class="bg-blue-500 text-white px-3 py-1.5 rounded text-sm font-medium hover:bg-blue-600 transition">
                    View All
                </a>
            </div>
            
            <div id="recentTickets" class="p-4">
                <div class="text-center py-6">
                    <div class="w-12 h-12 bg-gray-700 rounded-full mx-auto mb-3 flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                        </svg>
                    </div>
                    <p class="text-gray-500 text-sm">No tickets yet.</p>
                    <a href="/tickets" class="text-blue-400 hover:text-blue-300 text-sm font-medium inline-block mt-1">
                        Create your first ticket
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    loadDashboardData();
});

function loadDashboardData() {
    const tickets = JSON.parse(localStorage.getItem('ticketapp_tickets') || '[]');
    
    // Update counts - fixed to count all statuses properly
    const openTickets = tickets.filter(ticket => ticket.status === 'open').length;
    const inProgressTickets = tickets.filter(ticket => ticket.status === 'in_progress').length;
    const closedTickets = tickets.filter(ticket => ticket.status === 'closed').length;
    
    document.getElementById('openTicketsCount').textContent = openTickets;
    document.getElementById('inProgressTicketsCount').textContent = inProgressTickets;
    document.getElementById('closedTicketsCount').textContent = closedTickets;
    
    // Show recent tickets (last 5, sorted by newest first)
    const recentTickets = tickets
        .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
        .slice(0, 5);
    
    const recentTicketsContainer = document.getElementById('recentTickets');
    
    if (recentTickets.length === 0) {
        recentTicketsContainer.innerHTML = `
            <div class="text-center py-6">
                <div class="w-12 h-12 bg-gray-700 rounded-full mx-auto mb-3 flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                    </svg>
                </div>
                <p class="text-gray-500 text-sm">No tickets yet.</p>
                <a href="/tickets" class="text-blue-400 hover:text-blue-300 text-sm font-medium inline-block mt-1">
                    Create your first ticket
                </a>
            </div>
        `;
    } else {
        recentTicketsContainer.innerHTML = `
            <div class="space-y-3">
                ${recentTickets.map(ticket => `
                    <div class="flex items-center justify-between p-3 border border-gray-700 rounded-lg hover:bg-gray-750 transition group">
                        <div class="flex-1 min-w-0">
                            <h4 class="font-medium text-white text-sm truncate">${escapeHtml(ticket.title)}</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="px-2 py-1 rounded text-xs font-medium border ${
                                    ticket.status === 'open' ? 'bg-green-500/20 text-green-400 border-green-500/30' :
                                    ticket.status === 'in_progress' ? 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30' :
                                    'bg-blue-500/20 text-blue-400 border-blue-500/30'
                                }">
                                    ${ticket.status.replace('_', ' ')}
                                </span>
                                <span class="text-xs text-gray-500">${formatDate(ticket.createdAt)}</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-2 ml-3 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button onclick="editTicket('${ticket.id}')" class="p-1.5 text-blue-400 hover:bg-blue-500/20 rounded transition" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </button>
                            <a href="/tickets" class="p-1.5 text-gray-400 hover:bg-gray-700 rounded transition" title="View">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                `).join('')}
            </div>
        `;
    }
}

// Utility functions
function escapeHtml(text) {
    const map = {
        "&": "&amp;",
        "<": "&lt;",
        ">": "&gt;",
        '"': "&quot;",
        "'": "&#039;",
    };
    return text.replace(/[&<>"']/g, (m) => map[m]);
}

function formatDate(dateString) {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
        year: 'numeric'
    });
}

// Make editTicket available (it should be defined in tickets.js)
function editTicket(id) {
    // Redirect to tickets page with edit mode, or implement inline edit
    window.location.href = `/tickets#edit-${id}`;
}
window.editTicket = editTicket;
</script>
{% endblock %}